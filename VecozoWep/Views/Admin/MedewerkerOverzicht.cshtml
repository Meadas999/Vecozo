@using VecozoWeb.Models
@model MedewerkerVM
@{
    ViewData["Title"] = "Index";
}



<h3>@Model.GetFullName()'s Vaardigheden</h3>
<body>
    <table class="table table-hover" id="medewerkersTable">
        <thead>
            <tr>
                <th onclick="sortTable(0)" scope="col">Naam</th>
                <th onclick="sortTable(1)" scope="col">Score</th>
                <th onclick="sortTable(2)" scope="col">Beschrijving</th>
                <th onclick="sortTable(23" scope="col">Laatst gewijzigd</th>
            </tr>
        </thead>
        <tbody>
            @foreach (RatingVM r in Model.Ratings)
            {
                <tr>
                    <td>
                        <a data-bs-toggle="offcanvas" href="#offcanvasRight" aria-controls="offcanvasRight">
                            @r.Vaardigheid.Naam
                        </a>
                    </td>
                    <td>
                        <a data-bs-toggle="offcanvas" href="#offcanvasRight" aria-controls="offcanvasRight">
                            @for (int i = 0; i < r.Score; i++)
                            {
                                <span class="fa fa-star checked"></span>
                            }
                        </a>
                    </td>
                    <td>
                        <a data-bs-toggle="offcanvas" href="#offcanvasRight" aria-controls="offcanvasRight">
                            @r.Beschrijving
                        </a>
                    </td>
                    <td>
                        <a data-bs-toggle="offcanvas" href="#offcanvasRight" aria-controls="offcanvasRight">
                            @r.LaatsteDatum.ToShortDateString()
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header">
            <h5 id="offcanvasRightLabel">Update</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            ...
        </div>
    </div>
    <br />
    <a class="" data-bs-toggle="modal" href="#exampleModal" role="button" aria-controls="#exampleModal">
        Voeg een vaardigheid toe
    </a>
    @*<!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class=" modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nieuwe vaardigheid</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <select class="form-select" id="inputGroupSelect01" style="width:auto">
